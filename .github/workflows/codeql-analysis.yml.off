name: "Code scanning - action"

on:
  push:
  pull_request:
  schedule:
    - cron: '0 6 * * 4'
  paths:
    - '*'
    - '!/readme.md'
    - '!/SECURITY.md'
    - '!/licence.txt'
    - '!/Benchmark/*'
    - '!/IntegrationTest/*'
    - '!/dists/*'
    - '!/assets/*'

jobs:

  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Setup .NET
        uses: actions/setup-dotnet@v1
        with:
          dotnet-version: '6.0.x'

      - name: Restore dependencies
        run: dotnet restore

      - name: Build solution
        run: dotnet build --configuration Release
				
  codeql-analysis:
    needs: build
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Setup CodeQL
        uses: github/codeql-action/init@v1

      - name: Perform CodeQL Analysis
        uses: github/codeql-action/analyze@v1
        with:
          languages: csharp
